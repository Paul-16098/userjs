{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ESNext", "ES7", "DOM"],
    "target": "ESNext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": ".",
    "strict": true,
    "declaration": true,
    "noImplicitAny": true
  },
  "files": ["./build.mts"]
}
