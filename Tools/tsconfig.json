{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "sourceMap": true,
    "lib": ["ESNext", "ES7", "DOM"],
    "target": "ESNext",
    "module": "commonjs",
    "outDir": ".",
    "strict": true,
    "declaration": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
